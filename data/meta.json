{
  "modes": {
    "default": {
      "strict": false,
      "literal": false,
      "approximate": false,
      "insensitive": true
    }
  },
  "models": {
    "default": {
      "id": "ID",
      "date": {
        "day": "Day",
        "month": "Month",
        "year": "Year"
      },
      "location": {
        "origin": {
          "address": "Reg. Place written",
          "city": "Reg. Place written city",
          "country": "Reg. Place written country"
        },
        "destination": {
          "address": "Reg place sent",
          "city": "Reg. PlaceSent City",
          "country": "Reg. PlaceSent Country"
        }
      },
      "recipient": "Reg. recipient",
      "repository": "Repository",
      "collection": "Collection",
      "addressed": {
        "to": "Addressed to (Actual)",
        "from": "Addressed from (Actual)"
      },
      "language": "PrimaryLang",
      "autographed": "Autograph or Typed",
      "description": "PhysDes",
      "signed": "initialed or signed | S",
      "initialed": "initialed or signed | I",
      "leaves": "leaves",
      "sides": "sides",
      "envelope": "Envelope | E | 2 E"
    },
    "summary": {
      "id": "ID",
      "date": {
        "day": "Day",
        "month": "Month",
        "year": "Year"
      },
      "location": {
        "origin": {
          "address": "Reg. Place written",
          "city": "Reg. Place written city",
          "country": "Reg. Place written country"
        },
        "destination": {
          "address": "Reg place sent",
          "city": "Reg. PlaceSent City",
          "country": "Reg. PlaceSent Country"
        }
      },
      "recipient": "Reg. recipient",
      "repository": "Repository",
      "language": "PrimaryLang"
    }
  },
  "endpoints": {
    "GET": [
      {
        "endpoint": "browse",
        "model": "summary"
      },
      {
        "endpoint": "search/:query",
        "model": "default",
        "match": {
          ":query": "any"
        }
      },
      {
        "endpoint": "search/location/:query",
        "model": "default",
        "match": {
          ":query": [
            "location.origin.address",
            "location.origin.city",
            "location.origin.country",
            "location.destination.address",
            "location.destination.city",
            "location.destination.country"
          ]
        }
      },
      {
        "endpoint": "search/location/origin/:query",
        "model": "default",
        "match": {
          ":query": [
            "location.origin.address",
            "location.origin.city",
            "location.origin.country"
          ]
        }
      },
      {
        "endpoint": "search/location/destination/:query",
        "model": "default",
        "match": {
          ":query": [
            "location.destination.address",
            "location.destination.city",
            "location.destination.country"
          ]
        }
      },
      {
        "endpoint": "search/recipient/:query",
        "model": "default",
        "match": {
          ":query": [
            "recipient",
            "addressed.to"
          ]
        }
      },
      {
        "endpoint": "search/repository/:query",
        "model": "default",
        "match": {
          ":query": "repository"
        }
      },
      {
        "endpoint": "search/language/:query",
        "model": "default",
        "match": {
          ":query": "language"
        }
      },
      {
        "endpoint": "search/description/:query",
        "model": "default",
        "match": {
          ":query": "description"
        }
      },
      {
        "endpoint": "search/date/:query",
        "model": "default",
        "match": {
          ":query": "{date.month}-{date.day}-{date.year}"
        }
      },
      {
        "endpoint": "letter/:id",
        "model": "default",
        "match": {
          ":id": "id"
        }
      }
    ]
  }
}